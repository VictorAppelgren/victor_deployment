FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    bash \
    && rm -rf /var/lib/apt/lists/*

# Copy application code
COPY graph-functions /app/graph-functions
COPY saga-be /app/saga-be
COPY victor_deployment/start-main.sh /app/victor_deployment/start-main.sh
COPY victor_deployment/start-top-sources.sh /app/victor_deployment/start-top-sources.sh
COPY victor_deployment/start-writer.sh /app/victor_deployment/start-writer.sh

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r /app/saga-be/requirements.txt && \
    pip install --no-cache-dir -r /app/graph-functions/requirements.txt

# Make start scripts executable
RUN chmod +x /app/victor_deployment/start-main.sh && \
    chmod +x /app/victor_deployment/start-top-sources.sh && \
    chmod +x /app/victor_deployment/start-writer.sh

CMD ["bash", "/app/victor_deployment/start-main.sh"]
